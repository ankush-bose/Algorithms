//Write a program to implement Bubble Sort  ğŸ˜ 
#include<stdio.h>

int main()
{
   
   int size,j;
   printf("Enter size of array: \n ");
   scanf("%d",&size);
   int arr[size],i;
   printf("Enter elements: \n ");
   for(i=0;i<size;i++)
       scanf("%d",&arr[i]);    
   for(i=0;i<size;i++)
      {
          for(j=0;j<size-1-i;j++)
            {
               if(arr[j]>arr[j+1])
                {
                  int temp;
                  temp=arr[j];
                  arr[j]=arr[j+1];
                  arr[j+1]=temp;
                }
               
            }
     
      }
printf("Sorted array is:\n");
for(i=0;i<size;i++)
printf("%d  ",arr[i]);
return 0;
}


